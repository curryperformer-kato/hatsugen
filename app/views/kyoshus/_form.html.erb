<p id="notice"><%= notice %></p>
  <% if @kyoshu.errors.any? %>
    <div id="error_explanation">
      <h2><%= @kyoshu.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @kyoshu.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@kyoshu, url: choose_new_or_edit) do |f| %>
  <%= f.label :content, '内容' %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit "発言する", class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "発言一覧画面にもどる", kyoshus_path %>