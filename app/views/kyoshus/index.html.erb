<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>みんなの発言一覧</h1>
      <%= link_to "発言する", new_kyoshu_path, class: 'btn btn-default' %>
    <% @kyoshus.each do |kyoshu| %>
    <div class="row">
      <p>発言:<%= kyoshu.content %></p>
      <%= link_to "発言を訂正する", edit_kyoshu_path(kyoshu.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "発言を撤回する", kyoshu_path(kyoshu.id), method: :delete, data: { confirm: "発言を撤回しますか？" }, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>